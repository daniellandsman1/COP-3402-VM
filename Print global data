#define MAX_PRINT_WIDTH 59 // ADD THIS AT THE TOP OF MACHINE.C

void print_global_data(FILE* out)
{
	int global_start; // = ?	Should end up being 1024. Maybe something to do with GPR[] (probably global pointer)
	int global_end; // = global_start + num_instrs;
	
	int num_chars = 0;
	
	for (int i = global_start; i < global_end; i++)
	{
		num_chars += fprintf(out, "%8d: %d\t", i, memory.words[i]); // memory.words[i] is probably %d bc word_type is typedef int (not unsigned)
		if (num_chars > MAX_PRINT_WIDTH)
		{
			newline(out);
			num_chars = 0;
		}
	}
	fprintf(out, "...");
}
